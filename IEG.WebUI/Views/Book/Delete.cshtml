@model IEG.Domain.Entities.Book

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>

<ul>
    <li><strong>Title:</strong> @Model.Title</li>
    <li><strong>Description:</strong> @Model.Description</li>
    <li><strong>Author:</strong> @Model.Author</li>
    <li><strong>Publisher:</strong> @Model.Publisher</li>
    <li><strong>Release Date:</strong> @Model.ReleaseDate</li>
    <li><strong>Price:</strong> @Model.Price.ToString("C")</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Book" class="btn btn-secondary">Cancel</a>
</form>